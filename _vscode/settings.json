{
  // editor/extensionsmarkdownpd
  "editor.fontLigatures": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "editor.renderWhitespace": "all",
  "editor.fontFamily": "'FiraMono Nerd Font Mono', Consolas, 'Courier New'",
  "terminal.integrated.fontFamily": "'FiraMono Nerd Font Mono'",
  "editor.wordWrap": "on",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "workbench.statusBar.visible": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "workbench.activityBar.location": "default",
  "workbench.iconTheme": "material-icon-theme",
  "telemetry.feedback.enabled": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "editor.largeFileOptimizations": false,
  "extensions.ignoreRecommendations": true,
  "editor.find.autoFindInSelection": "always",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDelete": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.tree.indent": 10,
  "explorer.compactFolders": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "explorer.decorations.badges": true,
  "window.zoomLevel": -1.5,
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.lineNumbers": "relative",
  "workbench.tree.enableStickyScroll": false,
  "editor.stickyScroll.enabled": false,
  "editor.unusualLineTerminators": "off",
  "files.encoding": "utf8",
  // material
  "material-icon-theme.hidesExplorerArrows": true,
  // markdown
  "markdown-preview-enhanced.enablePreviewZenMode": true,
  // begin Java - improved configuration
  // Use JAVA_HOME if available; set explicit runtimes for tools that read these settings.
  "java.jdt.ls.java.home": "C:\\Program Files\\Java\\jdk-21",
  "java.jdt.ls.vmargs": "-Xms256m -Xmx2G -XX:+UseG1GC -XX:+UseStringDeduplication -Duser.country=US -Dfile.encoding=UTF-8",
  "java.trace.server": "messages",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "C:\\Program Files\\Java\\jdk-17",
    },
    {
      "name": "JavaSE-21",
      "path": "C:\\Program Files\\Java\\jdk-21",
      "default": true
    },
    {
      "name": "JavaSE-25",
      "path": "C:\\Program Files\\Java\\jdk-25",
    }
  ],
  "java.help.collectErrorLog": true,
  "java.project.encoding": "setDefault",
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  "workbench.editorAssociations": {
    "*.jar": "default",
    "*.epub": "dodo-reader.epubEditor",
    "*.pdf": "dodo-reader.pdfEditor"
  },
  "java.eclipse.downloadSources": true,
  "java.completion.favoriteStaticMembers": [
    "org.junit.Assert.*",
    "org.junit.Assume.*",
    "org.junit.jupiter.api.Assertions.*",
    "org.junit.jupiter.api.Assumptions.*",
    "org.junit.jupiter.api.DynamicContainer.*",
    "org.junit.jupiter.api.DynamicTest.*",
    "org.mockito.Mockito.*",
    "org.mockito.ArgumentMatchers.*",
    "org.mockito.Answers.*"
  ],
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "java.completion.enabled": true,
  "java.completion.filteredTypes": [],
  "jdk.telemetry.enabled": false,
  "java.dependency.autoRefresh": true,
  "redhat.telemetry.enabled": false,
  "java.compile.nullAnalysis.mode": "automatic",
  "java.autobuild.enabled": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.import.gradle.user.home": "${env:USERPROFILE}\\.gradle",
  "java.import.gradle.offline.enabled": true,
  "java.import.gradle.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  "java.import.gradle.version": "current",
  "java.import.gradle.home": "",
  "java.import.gradle.arguments": "",
  "java.gradle.buildServer.enabled": "on",
  "java.import.gradle.jvmArguments": "",
  // end java
  // begin .NET
  "dotnet.enableXamlTools": true,
  "dotnet.autoDetect": "on",
  "dotnet.server.useOmnisharp": false,
  "dotnet.autoInsert.enableAutoInsert": true,
  "dotnet.defaultSolution": "",
  "dotnet.navigation.navigateToSourceLinkAndEmbeddedSources": true,
  "dotnet.automaticallyCreateSolutionInWorkspace": true,
  "dotnet.preferVisualStudioCodeFileSystemWatcher": false,
  "dotnet.formatting.organizeImportsOnFormat": true,
  "dotnet.highlighting.highlightRelatedJsonComponents": true,
  "dotnet.projects.enableAutomaticRestore": true,
  "dotnet.projects.enableFileBasedPrograms": true,
  // end .NET
  // powershell
  "[powershell]": {
    "files.encoding": "utf8"
  },
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.minimumContrastRatio": 1,
  // formatter
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
  },
  // catppuccin
  "catppuccin.italicKeywords": true,
  "catppuccin.italicComments": true,
  "catppuccin.accentColor": "mauve",
  "catppuccin.colorOverrides": {
    "all": {
      "text": "#fff"
    },
    "frappe": {
      "blue": "#bcdfff",
      "sky": "#282a36"
    }
  },
  "catppuccin.customUIColors": {
    "frappe": {
      "statusBar.background": "#bcdfff",
      "activityBar.background": "#bcdfff",
      "statusBar.foreground": "#282a36",
      "activityBar.foreground": "#282a36",
      "tab.activeBorder": "#bcdfff",
    }
  },
  // git
  "git.openRepositoryInParentFolders": "always",
  "git.autofetch": true,
  // wsl
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // pdf/epub
  "pdf.view": "*.pdf",
  "dodo-reader.epubEditor": "*.epub",
  // disable chat/copilot/AI agent
  "chat.notifyWindowOnConfirmation": false,
  "chat.commandCenter.enabled": false,
  "chat.agent.enabled": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
